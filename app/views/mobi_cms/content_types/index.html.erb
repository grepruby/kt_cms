<legend>Listing Content Types</legend>

<table class="table table-hover messages">
  <tr>
    <th>Name</th>
    <th>Opertions</th>
  </tr>

<% @content_types.each do |content_type| %>
  <tr>
    <td><%= content_type.name %></td>
    <td>
      <%= link_to 'Edit', edit_content_type_path(content_type), class: 'btn btn-mini' %>
      <%= link_to 'Destroy', content_type, method: :delete, class: 'btn btn-danger btn-mini', data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Content type', new_content_type_path, class: 'btn btn-primary' %>
