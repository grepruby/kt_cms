  <% @content_type.elements.each_with_index do |element, index| %>
    <%= render :partial => "form_element", :locals => {:element => element, :index => index} %>
  <% end %>
  <div id="more_content_types"></div>
  <%= link_to "<b>Add another Element</b>".html_safe, another_element_content_types_path, :remote => true %>
  <div class="row">
     <div class="span3 create_button_with_margin">
      <input type="submit" value="Create Element" name="commit" class="btn btn-success">
     </div>
  </div>

