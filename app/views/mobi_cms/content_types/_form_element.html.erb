<div class="element-row">
  <hr>
  <% unless element['errors'].blank? %>
    <div class="row">
      <div class="span8">
        <%= element['errors'].html_safe %>
      </div>
    </div>
  <%end %>
  <div class="row">
    <div class="span4">
      <label class="string required control-label"><abbr>* </abbr>Title</label>
      <%= text_field_tag 'content_type[elements][][title]', element["title"] %>
     </div>
    <div class="span4">
      <label class="string required control-label"><abbr>* </abbr>Data Type</label>
      <%= select_tag("content_type[elements][][data_type]", options_for_select(data_type_options, element["data_type"]), :prompt => "--select DataType--", class: "options") %>
     </div>
    <div class="span1">
      <!--<label class="string required control-label">Unique</label>-->
      <%#= check_box_tag 'element[][unique]', 'yes', element["unique"] %>
     </div>
    <div class="span1">
      <label class="string required control-label">Mendatory</label>
      <%= check_box_tag 'content_type[elements][][mendatory]', 'yes', element["mendatory"] %>
     </div>
    <div class="span1">
      <% if index != 0 %>
        <a href='javascript:void(0);' class='remove btn btn-danger btn-mini button_margin'>Remove</a>  
      <% end %>
    </div>
    <div class="span8 <%= display_class(element['data_type']) %>" id="options_block">
      <label class="string required control-label"><abbr>* </abbr>Options should be comma(,) separated like one,two,three...</label>
      <%= text_area_tag 'content_type[elements][][multi_options]', element["multi_options"], class: "span8" %>
    </div>
    <div class="span5 <%= display_class_for_lenth(element['data_type']) %>" id="string_max_block">
      <label class="string required control-label">Max Length</label>
      <%= text_field_tag 'content_type[elements][][maxlength]', element["maxlength"] %>
    </div>
    <div class="span5 <%= display_class_for_lenth(element['data_type']) %>" id="string_min_block">
      <label class="string required control-label">Min Length</label>
      <%= text_field_tag 'content_type[elements][][minlength]', element["minlength"] %>
    </div>
    
  </div>
</div>
